{# src/Uknow/PlatformBundle/Resources/views/donnees/donnees.html.twig#}

{% extends "UknowPlatformBundle::index.html.twig" %}

{% block title %}{{ chapitre.nom }}{% endblock %}

{% block contenu %}
    <div class="row">
        <div class="col-md-8" style="padding: 0; position: fixed; z-index: 1" id="colLien">
            <ol class="breadcrumb" style="margin: 0">
                <li><a href="{{ path('uknow_platform_recherche_acceuil')}}">Accueil</a></li>
                <li><a href="{{ path('uknow_platform_recherche_domaine', {'lienDomaine': domaine.lien }) }}">{{ domaine.nom }}</a></li>
                <li><a href="{{ path('uknow_platform_recherche_matiere', {'lienDomaine': domaine.lien, 'lienMatiere': matiere.lien }) }}">{{ matiere.nom }}</a></li>
                <li><a href="{{ path('uknow_platform_recherche_theme', {'lienDomaine': domaine.lien, 'lienMatiere': matiere.lien, 'lienTheme': theme.lien }) }}">{{ theme.nom }}</a></li>
                <li class="active">{{ chapitre.nom }}</li>
            </ol>
        </div>
        <div class="col-md-offset-8 col-md-1" style="padding: 0; position: fixed; z-index: 1; background-color: #f5f5f5" id="colButton">
            <button id="agrandir" onclick="agrandir()">
                <span class="glyphicon glyphicon-resize-full"></span>
            </button>
        </div>
    </div>
    <div class="row" style="margin-top: 36px">
        <div class="col-md-9" style="padding: 15px; text-align: center" id="colCours">
            {%  if listDonnees == null %}
                <h4>Il n'existe pas de cours pour cette section.<br/> Mais vous pouvez <em><a href="{{ path('uknow_platform_ajouter_cours', {'lienDomaine': domaine.lien, 'lienMatiere': matiere.lien, 'lienTheme': theme.lien, 'lienChapitre':chapitre.lien }) }}">en cr√©er un</a></em> !</h4>
            {% else %}
                {% for donnees in listDonnees %}
                    {{ include('UknowPlatformBundle:donnees:afficher.html.twig') }}
                    {{ include('UknowPlatformBundle:donnees:cacher.html.twig') }}
                    {% if id == donnees.id %}
                        <script>
                            document.getElementById('donneeCache_{{ loop.index }}').style.display = 'none';
                            document.getElementById('donneeAffiche_{{ loop.index }}').style.display = 'block';
                        </script>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}


