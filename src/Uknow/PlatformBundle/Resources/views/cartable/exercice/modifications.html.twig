{# src/Uknow/PlatformBundle/Resources/views/cartable/modifications.html.twig#}

{% extends "UknowPlatformBundle::index.html.twig" %}

{% block title %}Liste des modifications d'un cours{% endblock %}

{% block contenu %}
    <div class="row">
        <div class="col-md-8" style="padding: 0; position: fixed; z-index: 1; background-color: #f5f5f5;" id="colLien">
            <ol class="breadcrumb" style="margin: 0">
                <li><a href="{{ path('uknow_platform_cartable_cours')}}">Mes Cours</a></li>
                <li class="active">{{ donnee.titre }}</li>
            </ol>
        </div>
        <div class="col-md-offset-8 col-md-1" style="padding: 0; position: fixed; z-index: 1; background-color: #f5f5f5; height: 62px" id="colButton">
            <button id="agrandir" onclick="agrandir()">
                <span class="glyphicon glyphicon-resize-full"></span>
            </button>
            <button class="boutonAffiche" id="enregistrer_{{ loop.index }}" onclick="supprimer({{ donnees.id }}, null)">
                <span id="{{ loop.index }}" class="glyphicon glyphicon-floppy-remove"></span>
            </button>
        </div>
    </div>
    <div class="row" style="margin-top: 62px">
        <div class="col-md-9" style="padding: 15px; text-align: center" id="colCours">
            {% for donnees in listDonnees %}
                {{ include('UknowPlatformBundle:modifications:afficher.html.twig') }}
                {{ include('UknowPlatformBundle:modifications:cacher.html.twig') }}
            {% endfor %}
        </div>
    </div>
{% endblock %}
