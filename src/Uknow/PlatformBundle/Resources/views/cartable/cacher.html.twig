<div id="donneeCache_{{ loop.index }}" class="donneeCacher">
    <div class="blockTitre" onclick="afficher({{ loop.index }})">
        <h5 class="titre" id="titre_{{ loop.index }}">{{ donnees.titre }}<br/></h5>
    </div>
    <div class="row" style="margin:0">
        <span id="details">
            {{ donnees.matiereNom }} : {{ donnees.type }} : {{ donnees.niveauNom }}
        </span>
    </div>
    <div class="row" style="margin:0">
        <div class="col-md-6" id="fiable">{{ donnees.fiabilite }}%</div>
        <div class="col-md-6" id="temps">{{ donnees.temps }} minutes</div>
    </div>

    <div class="row" style="margin:0; background-color: #555">

        <div class="col-md-2" style="padding: 0">
            <div  class="pertinent" id="pertinent_{{ loop.index }}" >
                {{ donnees.pertinent }}
            </div>
        </div>

        <div class="col-md-2" style="padding: 0">
            <div  class="developper" id="developper_{{ loop.index }}">
                {{ donnees.developper }}
            </div>
        </div>

        <div class="col-md-2" style="padding: 0">
            <div  class="inutile" id="inutile_{{ loop.index }}" >
                {{ donnees.inutile }}
            </div>
        </div>

        {% if donnees.type == 'Cours' %}
            <a href="{{ path('uknow_platform_modifier_cours', {'id': donnees.id }) }}">
                <div class="col-md-2" style="padding: 0">
                    <button title="Modifier" data-toggle="tooltip" class="modifier">
                        <span class="glyphicon glyphicon-edit"></span>
                    </button>
                </div>
            </a>
        {% elseif donnees.type == 'Exercice' %}
            <a href="{{ path('uknow_platform_modifier_exercice', {'id': donnees.id }) }}">
                <div class="col-md-2" style="padding: 0">
                    <button title="Modifier" data-toggle="tooltip" class="modifier">
                        <span class="glyphicon glyphicon-edit"></span>
                    </button>
                </div>
            </a>
        {% endif %}

        <a href="{{ path('uknow_platform_cartable_modification', {'type': type, 'id': donnees.id }) }}">
            <div class="col-md-2" style="padding: 0">
                <button title="Liste des modifications" data-toggle="tooltip" class="modification">
                    <span class="glyphicon glyphicon-th-list"></span>
                </button>
            </div>
        </a>

        <button title="Supprimer du cartable" data-toggle="tooltip" class="boutonAffiche" id="enregistrer_{{ loop.index }}" onclick="supprimer({{ donnees.id }}, {{ loop.index }}, {{ loop.length }}, '{{ donnees.matiereNom }}', '{{ donnees.niveauNom }}')">
            <span id="{{ loop.index }}" class="glyphicon glyphicon-floppy-remove"></span>
        </button>
    </div>
</div>