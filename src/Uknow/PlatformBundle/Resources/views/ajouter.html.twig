{# src/Uknow/PlatformBundle/Resources/views/ajouter.html.twig#}

{% extends "UknowPlatformBundle::index.html.twig" %}

{% block title %}Ajout{% endblock %}

{% block contenu %}
    <div class="row">
        <div class="col-md-9">
            <h3>Ajout d'un cours ou d'un exercice.</h3>
            <div class="form-group" id="ajouter">
                {{ form_start(formAjout) }}
                    {{ form_errors(formAjout) }}
                    <div class="form-group">
                        {{ form_errors(formAjout.titre) }}
                        {{ form_widget(formAjout.titre, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(formAjout.structure) }}
                        {{ form_widget(formAjout.structure, {'attr': {'class': 'btn btn-default'}}) }}
                    </div>

                    <div class="form-group">
                        <div class="form-inline">
                            <div class="input-group">
                                <span class="input-group-addon">Type:</span>
                                {{ form_errors(formAjout.type) }}
                                {{ form_widget(formAjout.type, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon">Niveau:</span>
                                {{ form_errors(formAjout.niveau) }}
                                {{ form_widget(formAjout.niveau, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon">Temps:</span>
                                {{ form_errors(formAjout.temps) }}
                                {{ form_widget(formAjout.temps, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">minutes</span>
                            </div>
                        </div>
                    </div>

                    <div id="exercice" class="form-group" style="display: none">
                        {{ form_errors(formAjout.exercice) }}
                        {{ form_widget(formAjout.exercice) }}
                    </div>

                    <div id="cours" class="form-group">
                        {{ form_errors(formAjout.cours) }}
                        {{ form_widget(formAjout.cours) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(formAjout.ajouter, {'attr': {'class': 'btn btn-default'}}) }}
                    </div>
                {{ form_end(formAjout) }}
            </div>
        </div>
    </div>
{% endblock %}
