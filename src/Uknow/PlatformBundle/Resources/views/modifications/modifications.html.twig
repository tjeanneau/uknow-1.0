{# src/Uknow/PlatformBundle/Resources/views/modifications/modifications.html.twig#}

{% extends "UknowPlatformBundle::index.html.twig" %}

{% block title %}Modifications{% endblock %}

{% block contenu %}
    <div class="row">
        <div class="col-md-8" style="padding: 0; position: fixed; z-index: 1; background-color: #f5f5f5;" id="colLien">
            <ol class="breadcrumb" style="margin: 0">
                <li><a href="{{ path('uknow_platform_recherche_acceuil')}}">Accueil</a></li>
                <li><a href="{{ path('uknow_platform_recherche_domaine', {
                        'lienDomaine': donnee.domaineLien
                    }) }}">{{ donnee.domaineNom }}</a></li>
                <li><a href="{{ path('uknow_platform_recherche_matiere', {
                        'lienDomaine': donnee.domaineLien,
                        'lienMatiere': donnee.matiereLien
                    }) }}">{{ donnee.matiereNom }}</a></li>
                <li><a href="{{ path('uknow_platform_recherche_theme', {
                        'lienDomaine': donnee.domaineLien,
                        'lienMatiere': donnee.matiereLien,
                        'lienTheme': donnee.themeLien
                    }) }}">{{ donnee.themeNom }}</a></li>
                <li><a href="{{ path('uknow_platform_recherche_chapitre', {
                        'lienDomaine': donnee.domaineLien,
                        'lienMatiere': donnee.matiereLien,
                        'lienTheme': donnee.themeLien,
                        'lienChapitre': donnee.chapitreLien
                    }) }}">{{ donnee.chapitreNom }}</a></li>
            </ol>
            <p style="margin: 0 10px 5px; font-size: 1.1em">{{ donnee.titre }}</p>


        </div>
        <div class="col-md-offset-8 col-md-1" style="padding: 0; position: fixed; z-index: 1; background-color: #f5f5f5; height: 62px" id="colButton">
            <button id="agrandir" onclick="agrandir()">
                <span class="glyphicon glyphicon-resize-full"></span>
            </button>
            {% if sauvegarder == true %}
                <button id="boutonEnregistrerValid">
                    <span class="glyphicon glyphicon-floppy-saved"></span>
                </button>
            {% else %}
                <button id="boutonEnregistrer" onclick="enregistrer({{ loop.index }})">
                    <span class="glyphicon glyphicon-floppy-disk"></span>
                </button>
            {% endif %}
        </div>
    </div>
    <div class="row" style="margin-top: 62px">
        <div class="col-md-9" style="padding: 15px; text-align: center" id="colCours">
            {% for donnees in listDonnees %}
                {{ include('UknowPlatformBundle:modifications:afficher.html.twig') }}
                {{ include('UknowPlatformBundle:modifications:cacher.html.twig') }}
            {% endfor %}
        </div>
    </div>
{% endblock %}
