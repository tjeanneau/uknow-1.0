{# src/Uknow/PlatformBundle/Resources/views/ajouter.html.twig#}

{% extends "UknowPlatformBundle::index.html.twig" %}

{% block title %}Ajout d'un cours{% endblock %}

{% block contenu %}
    <div class="row">
        <div class="col-md-9" style="padding: 0; position: fixed; z-index: 1">
            <div class="titre">Ajout d'un cours</div>
        </div>
    </div>
    <div class="row" style="margin-top: 36px">
        <div class="col-md-9" style="padding: 15px; z-index: 0">
            <div class="form-group" id="ajouter">
                {{ form_start(formAjout) }}
                    {{ form_errors(formAjout) }}
                    <div class="form-group">
                        {{ form_errors(formAjout.titre) }}
                        {{ form_widget(formAjout.titre, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        <div id="domaine" class="input-group">
                            <span class="input-group-addon">Domaine:</span>
                            {{ form_errors(formAjout.domaine_lien) }}
                            {{ form_widget(formAjout.domaine_lien, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">Matière:</span>
                            {{ form_errors(formAjout.matiere_lien) }}
                            {{ form_widget(formAjout.matiere_lien, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">Thème:</span>
                            {{ form_errors(formAjout.theme_lien) }}
                            {{ form_widget(formAjout.theme_lien, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">Chapitre:</span>
                            {{ form_errors(formAjout.chapitre_lien) }}
                            {{ form_widget(formAjout.chapitre_lien, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-inline">
                            <div class="input-group">
                                <span class="input-group-addon">Niveau:</span>
                                {{ form_errors(formAjout.niveau) }}
                                {{ form_widget(formAjout.niveau, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon">Temps:</span>
                                {{ form_errors(formAjout.temps) }}
                                {{ form_widget(formAjout.temps, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">minutes</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_errors(formAjout.ckeditor) }}
                        {{ form_widget(formAjout.ckeditor) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(formAjout.ajouter, {'attr': {'class': 'btn btn-default', 'style':'float:right'}}) }}
                    </div>
                {{ form_end(formAjout) }}
            </div>
        </div>
    </div>
{% endblock %}
